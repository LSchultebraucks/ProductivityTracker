<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StatisticActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/most_productive_hour_statistics_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/second_most_productive_hour_statistics_text_view"
        android:layout_below="@+id/most_productive_hour_statistics_text_view"
        android:layout_alignRight="@+id/most_productive_hour_statistics_text_view"
        android:layout_alignEnd="@+id/most_productive_hour_statistics_text_view"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/least_productive_hour_statistics_text_view"
        android:paddingBottom="10dp"
        android:layout_below="@+id/second_most_productive_hour_statistics_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/most_productive_day_statistics_text_view"
        android:paddingBottom="10dp"
        android:layout_below="@+id/least_productive_hour_statistics_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/most_unproductive_day_statistics_text_view"
        android:paddingBottom="10dp"
        android:layout_below="@+id/most_productive_day_statistics_text_view"
        android:layout_alignRight="@+id/most_productive_day_statistics_text_view"
        android:layout_alignEnd="@+id/most_productive_day_statistics_text_view"/>

</RelativeLayout>
